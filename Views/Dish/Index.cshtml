
@model List<Dish>
<link rel="stylesheet" href="~/css/menu-card.css" />

<div class="mb-4">
    <h1 class="d-inline-block align-middle">Menüler</h1> <a class="btn btn-success ml-5" asp-controller="Dish" asp-action="List">Yönet</a>
</div>

@foreach (var item in Model)
{
    <div class="mr-3 card-inline-block">
        <div class="property-card">
            <a href="/Dish/Details/@item.DishId">
                <div class="property-image" style=" background-image: url('@Url.Content("~/images/menu/"+item.Image)');">
                    <div class="property-image-title">
                        <h5>@item.DishName</h5>
                    </div>
                </div>
            </a>
            <div class="property-description">
                <h5 style="margin-bottom:15px;">
                    @item.DishName <br />
                    <span style="color:darkorange">
                        @item.Price &#x20BA;
                    </span>
                </h5>
                <p>@item.Description</p>
            </div>

        </div>
    </div>
}
